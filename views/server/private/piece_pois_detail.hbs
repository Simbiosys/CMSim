<section class="width-container">
  <div class="inner-body">

    {{> resort_left_bar}}

    <section class="search-form">
      <form method="GET" action="{{page.host}}/manager/pois/search" class="margin-bottom-20">
        <div class="input-group search-box">
          <input type="text" name="s" class="form-control border-none" placeholder="{{labels.do_search}}">
          <span class="input-group-btn">
            <button class="btn btn-blank" type="submit">
              <i class="fa fa-search fa-lg"></i>
            </button>
          </span>
        </div>

        {{#if data.search}}
        <div class="search-filter">
          {{labels.search_results_for}}: <strong>{{data.search}}</strong>
          <a href="{{page.host}}/manager/pois" class="pull-right">
            <i class="fa fa-times fa-lg"></i>
          </a>
        </div>
        {{/if}}

      </form>
    </section>

    <div class="search-padding">
      <div class="padding-top-10 padding-left-15 padding-right-20">
        <form method="POST" data-form data-model="pois"
          {{#if data.pois.id}}
            action="{{page.host}}/manager/pois/{{data.pois.id}}/save"
          {{else}}
            action="{{page.host}}/manager/pois/poi"
          {{/if}}>
          <header class="navbar-form navigation-bar width-container" role="">
            <div class="width-container">
              <a href="{{page.host}}/manager/pois" class="pull-left">
                <i class="fa fa-angle-left fa-3x return-back"></i>
              </a>
              <h1 class="page_title pull-left">
                {{#if data.pois.id}}
                  {{get_translation @root.data.poi_translations page.language 'title'}}
                {{else}}
                  {{labels.new_pois}}
                {{/if}}
              </h1>
              <nav class="pull-right">
                {{#if data.pois.id}}
                <a href="{{page.host}}/manager/pois/{{data.pois.id}}/delete" class="btn btn-cancel margin-right-8">
                  <i class="fa fa-trash-o fa-lg cancel-icon"></i> {{labels.delete}}
                </a>
                {{/if}}
                <button type="submit" class="btn btn-default">
                  <i class="fa fa-floppy-o fa-lg"></i> {{labels.save}}
                </button>
              </nav>
            </div>
          </header>

          <input type="hidden" name="id" id="id" value="{{data.pois.id}}" data-field />

          <div class="width-container">
            <section class="content-body">

              <div class="row">
                <div class="col-xs-12 margin-bottom-20">
                  URL:
                  <a href="{{page.host}}/{{page.language}}/pois/{{data.pois.id}}/{{get_translation @root.data.poi_translations page.language 'path'}}" target="_blank">
                    {{page.host}}/{{page.language}}/pois/{{data.pois.id}}/{{get_translation @root.data.poi_translations page.language 'path'}}
                  </a>
                </div>
              </div>
               <div class="row margin-bottom-10">
                <div class="col-xs-6">
                  <label for="coordenadas">{{labels.coordenada}}:</label>
                  <input type="text" name="coordinates" class="form-control" value="{{data.pois.coordinates}}" data-field />
                </div>
                <div class="col-xs-6">
                  <label for="timeofyear">{{labels.timeofyear}}:</label>
                  <select name="timeofyear" class="form-control" data-field>
                      <option value="{{data.pois.timeofyear}}">{{data.pois.timeofyear}}</option>
                      <option value="{{labels.winter}}">{{labels.winter}}</option>
                      <option value="{{labels.summer}}">{{labels.summer}}</option>
                  </select>
                </div>
              </div>
              <div class="row margin-bottom-10">
               <div class="col-xs-6">
                 <label for="tipo">{{labels.tipo}}:</label>
                 <select name="tipo" class="form-control" data-field>
                    <option value="{{data.pois.tipo}}">{{data.pois.tipo}}</option>
                    <option value="{{labels.airboard}}">{{labels.airboard}}</option>
                    <option value="{{labels.bar}}">{{labels.bar}}</option>
                    <option value="{{labels.fast_food}}">{{labels.fast_food}}</option>
                    <option value="{{labels.parking}}">{{labels.parking}}</option>
                    <option value="{{labels.restaurant}}">{{labels.restaurant}}</option>
                    <option value="{{labels.skischool}}">{{labels.skischool}}</option>
                    <option value="{{labels.snowpark}}">{{labels.snowpark}}</option>
                    <option value="{{labels.tickets}}">{{labels.tickets}}</option>
                    <option value="{{labels.medicalservice}}">{{labels.medicalservice}}</option>
                    <option value="{{labels.igluhotel}}">{{labels.igluhotel}}</option>
                    <option value="{{labels.adventureactivities}}">{{labels.adventureactivities}}</option>
                    <option value="{{labels.heliport}}">{{labels.heliport}}</option>
                    <option value="{{labels.iglubar}}">{{labels.iglubar}}</option>
                    <option value="{{labels.circuit}}">{{labels.circuit}}</option>
                    <option value="{{labels.childcircuit}}">{{labels.childcircuit}}</option>
                    <option value="{{labels.competitionstadium}}">{{labels.competitionstadium}}</option>
                    <option value="{{labels.snowgarden}}">{{labels.snowgarden}}</option>
                 </select>
               </div>
               <div class="col-xs-6">
                 <label for="urlinfo">{{labels.urlinfo}}:</label>
                 <input type="text" name="url_info" class="form-control" value="{{data.pois.url_info}}" data-field />
               </div>
              </div>
              <ul class="nav nav-tabs">
                {{#page.languages}}
                  <li role="presentation" class="{{equals @index 0 'active'}}">
                    <a href="#" data-tab="{{this}}">
                      {{language_name @root.labels this}}
                    </a>
                  </li>
                {{/page.languages}}
              </ul>

              {{#page.languages}}
                <div class="row language-content" data-content="{{this}}" data-row data-model="poi_translations" data-fk="language" data-fk-value="{{this}}">

                  <input type="hidden" name="id" value="{{get_translation @root.data.poi_translations this 'id'}}" data-field="id" data-field />

                  <div class="col-xs-12 margin-top-20">
                    <label for="title">{{@root.labels.poi_title}} ({{language_name @root.labels this}})</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="{{@root.labels.page_title}}" value="{{get_translation @root.data.poi_translations this 'title'}}" data-field />
                  </div>
                  <div class="col-xs-12 margin-top-20">
                    <label for="title">{{@root.labels.content}} ({{language_name @root.labels this}})</label>
                    <textarea class="form-control height-200" id="title" name="content" placeholder="{{@root.labels.content}}" data-field>{{@root.data.content}}{{get_translation @root.data.poi_translations this 'content'}}</textarea>
                  </div>
                </div>
              {{/page.languages}}

              {{> label_selector}}

              <div class="row margin-top-10" data-model="poi_labels">
                <div class="col-xs-12" id="label_container" data-model="poi_labels" data-fk="poi_id">
                  {{#data.poi_labels}}
                    <div class="label" data-label="{{label_id}}" data-selector="label_selector" data-row="" data-model="poi_labels" data-fk="poi_id" data-fk-value="{{@root.data.pois.id}}" data-name="label_id" data-value="{{id}}">
                      <input type="hidden" name="id" value="{{id}}" data-field />
                      <input type="hidden" name="deleted" value="0" data-field />
                      <span>{{get_translation label_translations @root.page.language 'name'}}</span>
                      <a href="javascript:void(0)" class="vertical-align-middle" data-remove-label="{{label_id}}" data-selector="label_selector">
                        <i class="fa fa-times fa-lg"></i>
                      </a>
                    </div>
                  {{/data.poi_labels}}
                </div>
              </div>

            </section>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<script src="{{page.web}}/js/labels.js?{{page.version}}"></script>
<script src="{{page.web}}/js/singular/form.js?{{page.version}}"></script>
