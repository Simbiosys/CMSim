<section class="width-container">
  <div class="inner-body">

    {{> resort_left_bar}}

    <section class="search-form">
      <form method="GET" action="{{page.host}}/manager/pois/search" class="margin-bottom-20">
        <div class="input-group search-box">
          <input type="text" name="s" class="form-control border-none" placeholder="{{labels.do_search}}">
          <span class="input-group-btn">
            <button class="btn btn-blank" type="submit">
              <i class="fa fa-search fa-lg"></i>
            </button>
          </span>
        </div>

        {{#if data.search}}
        <div class="search-filter">
          {{labels.search_results_for}}: <strong>{{data.search}}</strong>
          <a href="{{page.host}}/manager/pois" class="pull-right">
            <i class="fa fa-times fa-lg"></i>
          </a>
        </div>
        {{/if}}

      </form>
    </section>

    <div class="search-padding">
      <div class="padding-top-10 padding-left-15 padding-right-20">
        <form method="POST" data-model="pois" action="{{page.host}}/manager/pois/import" enctype="multipart/form-data">
          <header class="navbar-form navigation-bar width-container" role="">
            <div class="width-container">
              <a href="{{page.host}}/manager/pois" class="pull-left">
                <i class="fa fa-angle-left fa-3x return-back"></i>
              </a>
              <h1 class="page_title pull-left">
                {{labels.import}} {{labels.pois}}
              </h1>
              <nav class="pull-right">

              </nav>
            </div>
          </header>

          <input type="hidden" name="id" id="id" value="{{data.pois.id}}" data-field />

          <div class="width-container">
            <section class="content-body">

              <div class="row margin-bottom-10">
                <div class="col-xs-9">
                  <input type="file" name="file_to_import" class="form-control" value="" data-field />
                </div>
                <div class="col-xs-3">
                  <button type="submit" class="btn btn-default width-100">
                    <i class="fa fa-level-down fa-lg cancel-icon"></i> {{labels.import}}
                  </button>
                </div>
              </div>

            </section>
          </div>
        </form>

          <div class="width-container">
            <section class="content-body">

              {{#if data.message}}
                <div class="row">
                  <div class="col-md-12">
                    <p class="margin-top-10 margin-bottom-0 text-center">
                      {{#if data.success}}
                        <i class="fa fa-check fa-2x vertical-align-middle margin-right-20 import-success"></i>
                      {{else}}
                        <i class="fa fa-times fa-2x vertical-align-middle margin-right-20 import-fail"></i>
                      {{/if}}
                      <span class="import-text">
                        {{data.message}}
                      </span>
                    </p>
                  </div>
                </div>
              {{/if}}

              {{#if data.results}}
                <div class="row margin-bottom-10 text-right">
                  <div class="col-md-12">
                    <strong>{{data.results_size}}</strong> {{labels.imported_items}}
                  </div>
                </div>

                {{#if data.to_delete}}
                  <div class="row">
                    <h3 class="col-md-12 margin-top-10 margin-bottom-5">
                      {{labels.items_to_delete}}
                    </h3>
                    <p class="col-md-12 margin-top-10 margin-bottom-5">
                      {{data.to_delete_size}} {{labels.to_delete_description}}
                    </p>
                    <div class="col-md-12 margin-top-10 margin-bottom-5">
                      <form action="{{page.manager}}/pois/import/delete" method="post">
                        {{#each data.to_delete}}
                          <input type="hidden" name="pois[{{@index}}]" value="{{this}}" />
                        {{/each}}
                        <p class="text-right">
                          <input class="btn btn-danger" type="submit" value="{{labels.delete}}" />
                        </p>
                      </form>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-12">

                    </div>
                  </div>
                {{/if}}

                <div class="row">
                  <h3 class="col-md-12 margin-top-10 margin-bottom-5">
                    {{labels.results}}
                  </h3>
                </div>

                <div class="row margin-bottom-15 result-legend">
                  <div class="col-md-4">

                  </div>
                  <div class="col-md-2">
                    <i class="fa fa-star fa-lg status-created margin-right-5"></i> {{labels.created}}
                  </div>
                  <div class="col-md-2">
                    <i class="fa fa-refresh fa-lg status-updated margin-right-5"></i> {{labels.updated}}
                  </div>
                  <div class="col-md-2">
                    <i class="fa fa-trash-o fa-lg status-deleted margin-right-5"></i> {{labels.deleted}}
                  </div>
                  <div class="col-md-2">
                    <i class="fa fa-bars fa-lg status-equal margin-right-5"></i> {{labels.equal}}
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-12">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>
                            {{labels.identifier}}
                          </th>
                          <th>
                            {{labels.geometry_type}}
                          </th>
                          <th>
                            {{labels.element_type}}
                          </th>
                          <th class="text-center">
                            {{labels.status}}
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#data.results}}
                          <tr>
                            <td>
                              <a href="{{@root.page.host}}/manager/pois/{{id}}" target="_blank">{{identifier}}</a>
                            </td>
                            <td>
                              <a href="{{@root.page.host}}/manager/pois/{{id}}" target="_blank">{{geometry_type}}</a>
                            </td>
                            <td>
                              <a href="{{@root.page.host}}/manager/pois/{{id}}" target="_blank">{{get_type_translation @root.data.all_labels @root.page.language 'name' element_type}}</a>
                            </td>
                            <td class="text-center">
                              <a href="{{@root.page.host}}/manager/pois/{{id}}" target="_blank">
                              {{#if status.created}}
                                <abbr title="{{@root.labels.created}}">
                                  <i class="fa fa-star fa-lg status-created"></i>
                                </abbr>
                              {{/if}}
                              {{#if status.updated}}
                                <abbr title="{{@root.labels.updated}}">
                                  <i class="fa fa-refresh fa-lg status-updated"></i>
                                </abbr>
                              {{/if}}
                              {{#if status.deleted}}
                                <abbr title="{{@root.labels.deleted}}">
                                  <i class="fa fa-trash-o fa-lg status-deleted"></i>
                                </abbr>
                              {{/if}}
                              {{#if status.equal}}
                                <abbr title="{{@root.labels.equal}}">
                                  <i class="fa fa-bars fa-lg status-equal"></i>
                                </abbr>
                              {{/if}}
                              </a>
                            </td>
                          </tr>
                        {{/data.results}}
                      </tbody>
                    </table>
                  </div>
                </div>
              {{/if}}

            </section>
          </div>
      </div>
    </div>
  </div>
</section>
<script src="{{page.web}}/js/labels.js?{{page.version}}"></script>
