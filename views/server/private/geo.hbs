<header class="navbar-form navigation-bar width-container" role="">
  <div class="width-container">
    <h1 class="page_title pull-left">{{labels.geos}}</h1>
  </div>
</header>

<div class="width-container">
  <section class="content-body">
    <form method="GET" action="{{page.host}}/manager/geo/search" class="margin-bottom-20">
      <div class="input-group search-box">
        <input type="text" name="s" class="form-control border-none" placeholder="{{labels.do_search}}">
        <span class="input-group-btn">
          <button class="btn btn-blank" type="submit">
            <i class="fa fa-search fa-lg"></i>
          </button>
        </span>
      </div>

      {{#if data.search}}
      <div class="search-filter">
        {{labels.search_results_for}}: <strong>{{data.search}}</strong>
        <a href="{{page.host}}/manager/geo" class="pull-right">
          <i class="fa fa-times fa-lg"></i>
        </a>
      </div>
      {{/if}}

    </form>
    <ul class="nav nav-tabs">
      <li role="presentation" class="{{equals @index 0 'active'}}">
        <a href="#" data-language-tab="{{this}}">POI</a>
      </li>
      <li role="presentation" class="{{equals @index 0}}">
        <a href="#" data-language-tab="{{this}}">Ã¡reas</a>
      </li>
      <li role="presentation" class="{{equals @index 0}}">
        <a href="#" data-language-tab="{{this}}">pistas</a>
      </li>
      <li role="presentation" class="{{equals @index 0}}">
        <a href="#" data-language-tab="{{this}}">instalaciones</a>
      </li>
    </ul>
    <nav class="pagination-selector">
      {{#if data.search}}
      <a {{#if data.previous}} href="{{page.host}}/manager/geo/search/page/{{data.previous}}?s={{data.search}}" {{else}} href="javascript:void(0)" {{/if}}
      {{else}}
      <a {{#if data.previous}} href="{{page.host}}/manager/geo/page/{{data.previous}}" {{else}} href="javascript:void(0)" {{/if}}
      {{/if}}
        class="pagination-link previous {{#unless data.previous}} disabled {{/unless}}" {{#unless data.previous}} disabled {{/unless}}>
        <i class="fa fa-caret-left"></i>
      </a>
      <span class="pagination-page">
        {{data.page}}
      </span>
      {{#if data.search}}
      <a {{#if data.next}} href="{{page.host}}/manager/geo/search/page/{{data.next}}?s={{data.search}}" {{else}} href="javascript:void(0)" {{/if}}
      {{else}}
      <a {{#if data.next}} href="{{page.host}}/manager/geo/page/{{data.next}}" {{else}} href="javascript:void(0)" {{/if}}
      {{/if}}
        class="pagination-link next {{#unless data.next}} disabled {{/unless}}" {{#unless data.next}} disabled {{/unless}}>
        <i class="fa fa-caret-right"></i>
      </a>
    </nav>

  </section>
</div>
